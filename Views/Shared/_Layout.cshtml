<!DOCTYPE html>
<html lang="pt-br">
<head>
    
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="1.0.0" />
    <meta name="author" content="Ruan Basílio Sobral dos Santos" />
    <title>@ViewData["Title"] - FolhaPagamento</title>

    <!-- BOOTSTRAP E SBADMIN-->
    <link rel="stylesheet" href="~/_inc/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/_inc/css/sbAdmin.css" asp-append-version="true" />

    <!--FONTAWESOME-->
    <link href="~/_inc/lib/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="~/_inc/lib/fontawesome/css/brands.css" rel="stylesheet">
    <link href="~/_inc/lib/fontawesome/css/solid.css" rel="stylesheet">

    <!-- JQUERY E BOOTSTRAP -->
    <script src="~/_inc/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/_inc/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- AUTO COMPLETE -->
    <link rel="stylesheet" href="~/_inc/css/jquery-ui.css">
    <script src="~/_inc/js/jquery-ui.js"></script>

    <!--CONFIGURAÇÃO SITE-->
    <link rel="stylesheet" href="~/_inc/css/site.css" asp-append-version="true" />
    <script src="~/_inc/js/site.js" asp-append-version="true"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark shadow-lg" id="menuTopo">
        <a class="navbar-brand d-flex justify-content-center align-items-center" href="~/Home/Index" style="margin-right: -1.2px ">
            @*<i class="fa-solid fa-crown fas-2x" style="color:#BDA14E!important"></i> King's Solutions*@
            <img src="~/_images/png/logo2.png" style="height:50px" />
        </a>
        <div class="divisor-logo-topo"></div>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#!">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="nav-item">
                            <a class="nav-link text-center d-block" href="~/Home/Index">
                                <i class="fa-solid fa-house d-block mb-1"></i>
                                Página Inicial
                            </a>
                        </div>
                        <hr class="sidebar-divider" />
                        <div class="nav-item">
                            <a class="nav-link text-center d-block" href="~/Home/Index">
                                <i class="fa-solid fa-building d-block mb-1"></i>
                                Empresa
                            </a>
                        </div>
                        <hr class="sidebar-divider" />
                        <div class="nav-item">
                            <a class="nav-link text-center d-block" href="~/Home/Index">
                                <i class="fa-solid fa-user d-block mb-1"></i>
                                Funcionário
                            </a>
                        </div>
                        <hr class="sidebar-divider" />
                        <div class="nav-item">
                            <a class="nav-link text-center d-block" href="~/Home/Index">
                                <i class="fa-solid fa-rectangle-list d-block mb-1"></i>
                                CBO
                            </a>
                        </div>
                        <hr class="sidebar-divider" />
                        <div class="nav-item">
                            <a class="nav-link text-center d-block" href="~/Home/Index">
                                <i class="fa-solid fa-clock d-block mb-1"></i>
                                Horas
                            </a>
                        </div>
                        <hr class="sidebar-divider" />
                        <div class="nav-item">
                            <a class="nav-link text-center d-block" href="~/Home/Index">
                                <i class="fa-solid fa-file-invoice-dollar d-block mb-1"></i>
                                Holerite
                            </a>
                        </div>
                        <hr class="sidebar-divider" />
                    </div>
                </div>
                <div class="sb-sidenav-footer text-center">
                    <i class="fa-solid fa-crown fas-2x" style="color:#BDA14E!important"></i>
                    <div class="small">king’s Solutions Corp</div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4 titulo-pg">Tables</h1>
                    <ol class="breadcrumb mb-4">
                        @foreach (var item in ViewBag.Breadcrumb)
                        {
                            <li class="breadcrumb-item">
                                @if (item.Url == null)
                                {
                                    <span>@item.Title</span>
                                }
                                else
                                {
                                    <a href="@item.Url">@item.Title</a>
                                }
                            </li>
                        }
                    </ol>
                </div>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; king’s Solutions Corp Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/_inc/js/jquery.mask.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
